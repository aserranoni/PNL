% absolute value
% \abs{x}
% \abs[\big]{\sum_{i \in I} x_i}
% \abs*{\sum_{i \in I} x_i}
\newcommand*{\abs}{\piped}

% affine hull
% \aff(X)
\DeclareMathOperator*{\aff}{aff}

% argmax
% \argmax_{x \in X} f(x)
\DeclareMathOperator*{\argmax}{arg\,max}

% argmin
% \argmin_{x \in X} f(x)
\DeclareMathOperator*{\argmin}{arg\,min}

% unit ball
% \Ball
\newcommand*{\Ball}{\mathbb{B}}

% Requires: \usepackage{suffix}
% cardinality
% \card{S}
% \card[\Bigg]{\bigcup_{i \in I} A_i}
% \card*{\bigcup_{i \in I} A_i} uses \left and \right
\newcommand{\card}[2][]{\piped[#1]{#2}}
\WithSuffix\newcommand\card*[1]{\piped*{#1}}

% ceiling
% \ceiling{x}
% \ceiling[\Bigg]{\sum_{i \in I} x_i}
% \ceiling*{\sum_{i \in I} x_i} uses \left and \right
\DeclarePairedDelimiter\ceiling{\lceil}{\rceil}

% closure
% \cl(X)
\DeclareMathOperator{\cl}{cl}

% cone generated by
% \cone(X)
\DeclareMathOperator{\cone}{cone}

% convex hull
% \conv(X)
\DeclareMathOperator{\conv}{conv}

% curly braces
% \curly{x}
% \curly[\Bigg]{\sum_{i \in I} x_i}
% \curly*{\sum_{i \in I} x_i} uses \left and \right
\DeclarePairedDelimiter\curly{\{}{\}}

% delta in
% \deltain(S)
% \deltain[D](S)
\newcommand*{\deltain}[1][]{\delta_{#1}^{\scriptscriptstyle \rm\, in}}

% delta out
% \deltaout(S)
% \deltaout[D](S)
\newcommand*{\deltaout}[1][]{\delta_{#1}^{\scriptscriptstyle \rm\, out}}

% diagonal matrix from vector
% \Diag(X)
\DeclareMathOperator{\Diag}{Diag}

% extract diagonal from matrix
% \diag(X)
\DeclareMathOperator{\diag}{diag}

% distance
% \dist_G(r,s)
\DeclareMathOperator{\dist}{dist}

% the empty set
% \emptyset
\let\oldemptyset\emptyset
\renewcommand*{\emptyset}{\varnothing}

% epsilon
% \eps
\newcommand*{\eps}{\varepsilon}

% floor
% \floor{x}
% \floor[\Bigg]{\sum_{i \in I} x_i}
% \floor*{\sum_{i \in I} x_i} uses \left and \right
\DeclarePairedDelimiter\floor{\lfloor}{\rfloor}

% half-closed interval (open left, closed right)
% \halfclosed{x,y}
\newcommand\halfclosed[2]{\char40{}#1,#2\char93}

% half-open interval (closed left, open right)
% \halfopen{x,y}
\newcommand\halfopen[2]{\char91{}#1,#2\char41}

% Hadamard product
% A \hprod B
\newcommand*{\hprod}{\mathbin{\odot}}

% incidence vector
% \incidvector{F}
\newcommand*{\incidvector}[1]{\mathbbm{1}_{#1}}

% set of integers
% \Integers
\newcommand*{\Integers}{\mathbb{Z}}

%  interior
\DeclareMathOperator{\interior}{int}

% inner product, <.,.> notation
% \iprod{I}{X}
\DeclarePairedDelimiter\anglebrackets{\langle}{\rangle}
\newcommand\iprod[3][]{\anglebrackets[#1]{#2,#3}}
\WithSuffix\newcommand\iprod*[2]{\anglebrackets*{#1,#2}}

% inner product, .^T. notation
% \iprodt{x}{y}
\newcommand{\iprodt}[2]{#1^{\transp}#2}

% Iverson notation
% \Iverson{x > 0}
% \Iverson[\Big]{\sum_{i=1}^n x_i > 0}
% \Iverson*{\sum_{i=1}^n x_i > 0} uses \left and \right
\newcommand\Iverson[2][]{\sqbrac[#1]{#2}}
\WithSuffix\newcommand\Iverson*[1]{\sqbrac*{#1}}

% linear hull
% \lin(X)
\DeclareMathOperator{\lin}{lin}

% natural numbers
\newcommand{\Naturals}{\mathbb{N}}

% Requires: \usepackage{bbm}
% vector of all-ones
\newcommand*{\ones}{\mathbbm{1}}

% outer product, xy^T
% \oprod{x}{y}
\newcommand{\oprod}[2]{#1^{}#2^{\transp}}

% symmetric outer product
% \oprodsym{x}
\newcommand{\oprodsym}[1]{\oprod{#1}{#1}}

% parentheses
% \paren{x}
% \paren[\Bigg]{\sum_{i \in I} x_i}
% \paren*{\sum_{i \in I} x_i} uses \left and \right
\DeclarePairedDelimiter\paren{(}{)}

% piped
% \piped{x}
% \piped[\Bigg]{\sum_{i \in I} x_i}
% \piped*{\sum_{i \in I} x_i} uses \left and \right
\DeclarePairedDelimiter\piped{|}{|}

% power set
% \Powerset{V}
\newcommand*{\Powerset}[1]{\mathcal{P}(#1)}

% cone of positive semidefinite matrices
% \Psd{n}
\newcommand*{\Psd}[1]{\mathbb{S}_+^{#1}}

% quadratic form, x^T Q x
% \qform{Q}{x}
\newcommand{\qform}[2]{#2^{\transp}#1#2}

% fractional stable set polytope
% \QSTAB(G)
\DeclareMathOperator{\QSTAB}{QSTAB}

% rank
% \rank(X)
\DeclareMathOperator{\rank}{rank}

% set of rationals
% \Rationals
\newcommand*{\Rationals}{\mathbb{Q}}

% reaches
% r \reaches_D s
\newcommand*{\reaches}{\rightsquigarrow}

% set of reals
% \Reals
\newcommand*{\Reals}{\mathbb{R}}

% function restriction
% f\restrict{S}
\newcommand*{\restrict}[1]{\mathord{\restriction}_{#1}}

% square brackets
% \sqbrac{x}
% \sqbrac[\Bigg]{\sum_{i \in I} x_i}
\newcommand{\sqbrac}[2][]{#1[{#2}#1]}

% sequence
% \seq{v_1,\dotsc,v_n}
\newcommand\seq[2][]{\anglebrackets[#1]{#2}}
\WithSuffix\newcommand\seq*[1]{\anglebrackets*{#1}}

% set curly braces
% \set{1,2,\dotsc,n}
% \set[\Bigg]{\bigcup_{i \in I} A_i}
\newcommand{\set}[2][]{#1\{#2#1\}}

% set curly braces, with condition
% \setst{x \in \Reals^n}{Ax = b}
% \setst[\Bigg]{x \in \Reals^n}{Ax = b,\, x = \sum_{i \in I} x_i}
% \setst*{x \in \Reals^n}{Ax = b,\, x = \sum_{i \in I} x_i} uses \left and \right
\newcommand\setst[3][]{\curly[#1]{\,{#2}\,\colon{#3}}}
\WithSuffix\newcommand\setst*[2]{\curly*{\,{#1}\,\colon{#2}}}

% stable set polytope
% \STAB(G)
\DeclareMathOperator{\STAB}{STAB}

% support
% \supp(x)
\DeclareMathOperator{\supp}{supp}

% space of symmetric matrices
% \Sym{n}
\newcommand*{\Sym}[1]{\mathbb{S}^{#1}}

% trace
% \trace(X)
\DeclareMathOperator{\trace}{Tr}

% transpose
% X^{\transp}
\newcommand*{\transp}{\mathsf{T}}

